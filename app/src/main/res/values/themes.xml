<resources>
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item> <!-- Navy blue -->
        <item name="colorPrimaryVariant">@color/blue</item> <!-- Navy blue -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red</item> <!-- Red -->
        <item name="colorSecondaryVariant">@color/red</item> <!-- Dark red -->
        <item name="colorOnSecondary">@color/white</item>
